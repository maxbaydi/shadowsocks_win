<Window
    x:Class="VibeShadowsocks.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VibeShadowsocks">
    <Grid>
        <NavigationView
            x:Name="RootNavigation"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            PaneDisplayMode="Left"
            SelectionChanged="OnNavigationSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Icon="Home" Tag="dashboard" />
                <NavigationViewItem Content="Servers" Icon="Library" Tag="servers" />
                <NavigationViewItem Content="Routing/PAC" Icon="Globe" Tag="routing" />
                <NavigationViewItem Content="Settings" Icon="Setting" Tag="settings" />
                <NavigationViewItem Content="Logs" Icon="Document" Tag="logs" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
