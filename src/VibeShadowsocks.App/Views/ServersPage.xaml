<Page
    x:Class="VibeShadowsocks.App.Views.ServersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24,20,24,24" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Servers" Style="{ThemeResource TitleTextBlockStyle}" />

            <ListView
                Grid.Row="1"
                ItemsSource="{Binding Profiles}"
                SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4,8" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Glyph="&#xE968;"
                                FontSize="18"
                                VerticalAlignment="Center"
                                Opacity="0.6" />

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding DisplaySummary}" Opacity="0.5" FontSize="12" TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <FontIcon
                                Grid.Column="2"
                                Glyph="&#xE735;"
                                FontSize="14"
                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                Visibility="{Binding IsActive}"
                                VerticalAlignment="Center"
                                ToolTipService.ToolTip="Active server" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Spacing="8">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Command="{Binding AddCommand}" HorizontalAlignment="Stretch" />
                    <Button Grid.Column="1" Content="Delete" Command="{Binding DeleteCommand}" HorizontalAlignment="Stretch" />
                    <Button Grid.Column="2" Content="Save" Command="{Binding SaveCommand}" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" />
                </Grid>
                <Button
                    Content="Set Active"
                    Command="{Binding SetActiveCommand}"
                    HorizontalAlignment="Stretch"
                    ToolTipService.ToolTip="Use selected server for connection">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Enter" />
                    </Button.KeyboardAccelerators>
                </Button>
                <ProgressBar IsIndeterminate="{Binding IsBusy}" Visibility="{Binding IsBusy}" />
            </StackPanel>
        </Grid>

        <Border
            Grid.Column="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <ScrollViewer Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Server Details" Style="{ThemeResource SubtitleTextBlockStyle}" />

                    <TextBox Header="Name" Text="{Binding SelectedProfile.Name, Mode=TwoWay}" />

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>
                        <TextBox Header="Host" Text="{Binding SelectedProfile.Host, Mode=TwoWay}" />
                        <NumberBox Grid.Column="1" Header="Port" Value="{Binding SelectedProfile.Port, Mode=TwoWay}"
                                   SpinButtonPlacementMode="Compact" Minimum="1" Maximum="65535" />
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Header="Cipher method" Text="{Binding SelectedProfile.Method, Mode=TwoWay}" />
                        <PasswordBox Grid.Column="1" Header="Password" Password="{Binding SelectedProfile.Password, Mode=TwoWay}" />
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Header="Group" Text="{Binding SelectedProfile.Group, Mode=TwoWay}" />
                        <TextBox Grid.Column="1" Header="Tags (comma separated)" Text="{Binding SelectedProfile.TagsCsv, Mode=TwoWay}" />
                    </Grid>

                    <ToggleSwitch Header="Favorite" IsOn="{Binding SelectedProfile.IsFavorite, Mode=TwoWay}" />

                    <TextBox Header="Plugin" Text="{Binding SelectedProfile.Plugin, Mode=TwoWay}"
                             PlaceholderText="Optional (e.g. v2ray-plugin)" />
                    <TextBox Header="Plugin options" Text="{Binding SelectedProfile.PluginOptions, Mode=TwoWay}"
                             PlaceholderText="Optional" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,8,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Import / Export" Style="{ThemeResource BodyStrongTextBlockStyle}" />

                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Header="ss:// URI" Text="{Binding ImportText, Mode=TwoWay}"
                                         PlaceholderText="Paste ss:// link to import" />
                                <Button Grid.Column="1" Content="Import" Command="{Binding ImportCommand}"
                                        VerticalAlignment="Bottom" Margin="0,0,0,1" />
                            </Grid>

                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Header="Exported URI" Text="{Binding ExportText}" IsReadOnly="True" />
                                <Button Grid.Column="1" Content="Export" Command="{Binding ExportCommand}"
                                        VerticalAlignment="Bottom" Margin="0,0,0,1" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Opacity="0.8" Margin="0,4,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
