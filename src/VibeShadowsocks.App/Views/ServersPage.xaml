<Page
    x:Class="VibeShadowsocks.App.Views.ServersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24,20,24,24" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Uid="ServersTitle" Style="{ThemeResource TitleTextBlockStyle}" />

            <ListView
                Grid.Row="1"
                ItemsSource="{Binding Profiles}"
                SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4,8" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Glyph="&#xE968;"
                                FontSize="18"
                                VerticalAlignment="Center"
                                Opacity="0.6" />

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding DisplaySummary}" Opacity="0.5" FontSize="12" TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <FontIcon
                                Grid.Column="2"
                                Glyph="&#xE735;"
                                FontSize="14"
                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                Visibility="{Binding IsActive}"
                                VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Spacing="8">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Uid="AddBtn" Command="{Binding AddCommand}" HorizontalAlignment="Stretch" />
                    <Button x:Uid="DeleteBtn" Grid.Column="1" Command="{Binding DeleteCommand}" HorizontalAlignment="Stretch" />
                    <Button x:Uid="SaveServersBtn" Grid.Column="2" Command="{Binding SaveCommand}" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" />
                </Grid>
                <Button
                    x:Uid="SetActiveBtn"
                    Command="{Binding SetActiveCommand}"
                    HorizontalAlignment="Stretch"
                    ToolTipService.ToolTip="{Binding TooltipSetActive}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Enter" />
                    </Button.KeyboardAccelerators>
                </Button>
                <ProgressBar IsIndeterminate="{Binding IsBusy}" Visibility="{Binding IsBusy}" />
            </StackPanel>
        </Grid>

        <Border
            Grid.Column="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <ScrollViewer Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock x:Uid="ServerDetailsTitle" Style="{ThemeResource SubtitleTextBlockStyle}" />

                    <TextBox x:Uid="NameBox" Text="{Binding SelectedProfile.Name, Mode=TwoWay}" />

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Uid="HostBox" Text="{Binding SelectedProfile.Host, Mode=TwoWay}" />
                        <NumberBox x:Uid="PortBox" Grid.Column="1" Value="{Binding SelectedProfile.Port, Mode=TwoWay}"
                                   SpinButtonPlacementMode="Compact" Minimum="1" Maximum="65535" />
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Uid="CipherBox" Text="{Binding SelectedProfile.Method, Mode=TwoWay}" />
                        <PasswordBox x:Uid="PasswordBox" Grid.Column="1" Password="{Binding SelectedProfile.Password, Mode=TwoWay}" />
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Uid="GroupBox" Text="{Binding SelectedProfile.Group, Mode=TwoWay}" />
                        <TextBox x:Uid="TagsBox" Grid.Column="1" Text="{Binding SelectedProfile.TagsCsv, Mode=TwoWay}" />
                    </Grid>

                    <ToggleSwitch x:Uid="FavoriteSwitch" IsOn="{Binding SelectedProfile.IsFavorite, Mode=TwoWay}" />

                    <TextBox x:Uid="PluginBox" Text="{Binding SelectedProfile.Plugin, Mode=TwoWay}" />
                    <TextBox x:Uid="PluginOptsBox" Text="{Binding SelectedProfile.PluginOptions, Mode=TwoWay}" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,8,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock x:Uid="ImportExportTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />

                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Uid="ImportUriBox" Text="{Binding ImportText, Mode=TwoWay}" />
                                <Button x:Uid="ImportBtn" Grid.Column="1" Command="{Binding ImportCommand}"
                                        VerticalAlignment="Bottom" Margin="0,0,0,1" />
                            </Grid>

                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Uid="ExportUriBox" Text="{Binding ExportText}" IsReadOnly="True" />
                                <Button x:Uid="ExportBtn" Grid.Column="1" Command="{Binding ExportCommand}"
                                        VerticalAlignment="Bottom" Margin="0,0,0,1" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Opacity="0.8" Margin="0,4,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
