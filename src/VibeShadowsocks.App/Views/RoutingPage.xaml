<Page
    x:Class="VibeShadowsocks.App.Views.RoutingPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Padding="24,20,24,24" Spacing="16">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Uid="RoutingTitle" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <ProgressRing IsActive="{Binding IsBusy}" Width="20" Height="20" />
                    <Button
                        Command="{Binding SaveAndApplyCommand}"
                        Style="{ThemeResource AccentButtonStyle}"
                        MinWidth="130">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE74E;" FontSize="14" />
                            <TextBlock x:Uid="SaveApplyBtnText" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock x:Uid="PacSourceSection" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch
                        x:Uid="RemotePacToggle"
                        x:Name="RemotePacToggle"
                        IsOn="{Binding IsRemotePac, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Border
                Visibility="{Binding RemoteVisibility}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <TextBlock x:Uid="RemotePacSection" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    </StackPanel>
                    <TextBlock
                        x:Uid="RemotePacDescription"
                        TextWrapping="Wrap"
                        Opacity="0.7"
                        FontSize="13" />
                    <TextBox
                        x:Uid="RemotePacUrlBox"
                        Text="{Binding RemotePacUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <InfoBar
                        x:Uid="PortCompatInfo"
                        Severity="Warning"
                        IsOpen="True"
                        IsClosable="False" />
                </StackPanel>
            </Border>

            <InfoBar
                x:Uid="HowItWorksInfo"
                Visibility="{Binding ManagedVisibility}"
                Severity="Informational"
                IsOpen="True"
                IsClosable="True" />

            <Grid
                Visibility="{Binding ManagedVisibility}"
                ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                            <TextBlock x:Uid="ProxiedDomainsTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock
                            x:Uid="ProxiedDomainsDesc"
                            Opacity="0.6" FontSize="12" TextWrapping="Wrap" />

                        <Grid ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="ProxyDomainInput"
                                Text="{Binding NewProxyDomain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="google.com"
                                KeyDown="OnProxyDomainKeyDown" />
                            <Button
                                Grid.Column="1"
                                Command="{Binding AddProxyDomainCommand}"
                                ToolTipService.ToolTip="{Binding TooltipAddDomain}">
                                <FontIcon Glyph="&#xE710;" FontSize="14" />
                            </Button>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ProxyDomains}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" />
                                        <Button
                                            Grid.Column="1"
                                            Click="OnRemoveProxyDomain"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4">
                                            <FontIcon Glyph="&#xE711;" FontSize="11" Opacity="0.6" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorCautionBrush}" />
                            <TextBlock x:Uid="DirectDomainsTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock
                            x:Uid="DirectDomainsDesc"
                            Opacity="0.6" FontSize="12" TextWrapping="Wrap" />

                        <Grid ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="DirectDomainInput"
                                Text="{Binding NewDirectDomain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="mybank.local"
                                KeyDown="OnDirectDomainKeyDown" />
                            <Button
                                Grid.Column="1"
                                Command="{Binding AddDirectDomainCommand}"
                                ToolTipService.ToolTip="{Binding TooltipAddDomain}">
                                <FontIcon Glyph="&#xE710;" FontSize="14" />
                            </Button>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding DirectDomains}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" />
                                        <Button
                                            Grid.Column="1"
                                            Click="OnRemoveDirectDomain"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4">
                                            <FontIcon Glyph="&#xE711;" FontSize="11" Opacity="0.6" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <Border
                Visibility="{Binding ManagedVisibility}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <ToggleSwitch
                        x:Uid="UnlistedSwitch"
                        IsOn="{Binding DefaultActionIsProxy, Mode=TwoWay}" />
                    <ToggleSwitch
                        x:Uid="BypassPrivateSwitch"
                        IsOn="{Binding BypassPrivateAddresses, Mode=TwoWay}" />
                    <ToggleSwitch
                        x:Uid="BypassSimpleSwitch"
                        IsOn="{Binding BypassSimpleHostnames, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Expander
                x:Uid="AdvancedExpander"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="16" Padding="4">
                    <ComboBox
                        x:Uid="PacProfileBox"
                        ItemsSource="{Binding PacProfiles}"
                        SelectedItem="{Binding SelectedPacProfile, Mode=TwoWay}"
                        DisplayMemberPath="Name"
                        HorizontalAlignment="Stretch" />

                    <TextBox
                        x:Uid="RulesUrlBox"
                        Visibility="{Binding ManagedVisibility}"
                        Text="{Binding RulesUrl, Mode=TwoWay}" />

                    <TextBlock
                        x:Uid="TestUrlLabel"
                        Visibility="{Binding ManagedVisibility}"
                        Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <Grid
                        Visibility="{Binding ManagedVisibility}"
                        ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Text="{Binding TestInput, Mode=TwoWay}"
                            PlaceholderText="https://example.com" />
                        <Button x:Uid="TestBtn" Grid.Column="1" Command="{Binding TestCommand}" MinWidth="60" />
                        <TextBox x:Uid="TestResultBox" Grid.Column="2" Text="{Binding TestOutput}" IsReadOnly="True" />
                    </Grid>

                    <TextBlock x:Uid="PacPreviewLabel" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <TextBox
                        Text="{Binding PacPreview}"
                        AcceptsReturn="True"
                        MinHeight="150"
                        MaxHeight="300"
                        TextWrapping="Wrap"
                        IsReadOnly="True"
                        FontFamily="Cascadia Mono,Consolas,Courier New"
                        FontSize="12" />
                </StackPanel>
            </Expander>

            <TextBlock
                Text="{Binding StatusMessage}"
                TextWrapping="Wrap"
                Opacity="0.8"
                FontSize="13" />
        </StackPanel>
    </ScrollViewer>
</Page>
