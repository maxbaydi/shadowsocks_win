<Page
    x:Class="VibeShadowsocks.App.Views.RoutingPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Padding="24,20,24,24" Spacing="16">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Routing Rules" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <ProgressRing IsActive="{Binding IsBusy}" Width="20" Height="20" />
                    <Button
                        Command="{Binding SaveAndApplyCommand}"
                        Style="{ThemeResource AccentButtonStyle}"
                        MinWidth="130">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE74E;" FontSize="14" />
                            <TextBlock Text="Save &amp; Apply" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="PAC Source" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch
                        x:Name="RemotePacToggle"
                        Header="Use remote PAC script instead of custom rules"
                        OnContent="Remote PAC URL"
                        OffContent="Custom Rules"
                        IsOn="{Binding IsRemotePac, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Border
                Visibility="{Binding RemoteVisibility}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <TextBlock Text="Remote PAC Script" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    </StackPanel>
                    <TextBlock
                        TextWrapping="Wrap"
                        Opacity="0.7"
                        FontSize="13"
                        Text="Paste a URL to a .pac file hosted online. The system will set this URL as the AutoConfig proxy. The PAC script decides which traffic goes through the proxy and which goes directly." />
                    <TextBox
                        Text="{Binding RemotePacUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="https://example.com/proxy.pac"
                        Header="PAC URL (HTTPS)" />
                    <InfoBar
                        Severity="Warning"
                        IsOpen="True"
                        IsClosable="False"
                        Title="Port compatibility"
                        Message="The remote PAC script must use the same SOCKS port as configured in Settings (default: 1080). If ports don't match, the proxy won't work." />
                </StackPanel>
            </Border>

            <InfoBar
                Visibility="{Binding ManagedVisibility}"
                Title="How it works"
                Message="In PAC mode, traffic is routed based on these rules. Add domains to 'Proxied' to send them through the proxy, or to 'Direct' to bypass it."
                Severity="Informational"
                IsOpen="True"
                IsClosable="True" />

            <Grid
                Visibility="{Binding ManagedVisibility}"
                ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                            <TextBlock Text="Proxied Domains" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock
                            Text="These domains will route through the Shadowsocks proxy"
                            Opacity="0.6" FontSize="12" TextWrapping="Wrap" />

                        <Grid ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="ProxyDomainInput"
                                Text="{Binding NewProxyDomain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="google.com"
                                KeyDown="OnProxyDomainKeyDown" />
                            <Button
                                Grid.Column="1"
                                Command="{Binding AddProxyDomainCommand}"
                                ToolTipService.ToolTip="Add domain">
                                <FontIcon Glyph="&#xE710;" FontSize="14" />
                            </Button>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ProxyDomains}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" />
                                        <Button
                                            Grid.Column="1"
                                            Click="OnRemoveProxyDomain"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4"
                                            ToolTipService.ToolTip="Remove">
                                            <FontIcon Glyph="&#xE711;" FontSize="11" Opacity="0.6" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource SystemFillColorCautionBrush}" />
                            <TextBlock Text="Direct Domains (Bypass)" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock
                            Text="These domains will always connect directly, bypassing the proxy"
                            Opacity="0.6" FontSize="12" TextWrapping="Wrap" />

                        <Grid ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="DirectDomainInput"
                                Text="{Binding NewDirectDomain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="mybank.local"
                                KeyDown="OnDirectDomainKeyDown" />
                            <Button
                                Grid.Column="1"
                                Command="{Binding AddDirectDomainCommand}"
                                ToolTipService.ToolTip="Add domain">
                                <FontIcon Glyph="&#xE710;" FontSize="14" />
                            </Button>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding DirectDomains}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" />
                                        <Button
                                            Grid.Column="1"
                                            Click="OnRemoveDirectDomain"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4"
                                            ToolTipService.ToolTip="Remove">
                                            <FontIcon Glyph="&#xE711;" FontSize="11" Opacity="0.6" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <Border
                Visibility="{Binding ManagedVisibility}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Behavior" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch
                        Header="Unlisted domains"
                        OnContent="Route through proxy"
                        OffContent="Connect directly"
                        IsOn="{Binding DefaultActionIsProxy, Mode=TwoWay}" />
                    <ToggleSwitch
                        Header="Bypass private addresses (10.x, 172.16.x, 192.168.x)"
                        IsOn="{Binding BypassPrivateAddresses, Mode=TwoWay}" />
                    <ToggleSwitch
                        Header="Bypass simple hostnames (e.g. intranet)"
                        IsOn="{Binding BypassSimpleHostnames, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Expander
                Header="Advanced Settings"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="16" Padding="4">
                    <ComboBox
                        Header="PAC Profile"
                        ItemsSource="{Binding PacProfiles}"
                        SelectedItem="{Binding SelectedPacProfile, Mode=TwoWay}"
                        DisplayMemberPath="Name"
                        HorizontalAlignment="Stretch" />

                    <TextBox
                        Visibility="{Binding ManagedVisibility}"
                        Header="Rules URL (auto-download additional rules)"
                        Text="{Binding RulesUrl, Mode=TwoWay}"
                        PlaceholderText="https://example.com/rules.txt" />

                    <TextBlock
                        Visibility="{Binding ManagedVisibility}"
                        Text="Test URL" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <Grid
                        Visibility="{Binding ManagedVisibility}"
                        ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Text="{Binding TestInput, Mode=TwoWay}"
                            PlaceholderText="https://example.com" />
                        <Button Grid.Column="1" Command="{Binding TestCommand}" Content="Test" MinWidth="60" />
                        <TextBox Grid.Column="2" Text="{Binding TestOutput}" IsReadOnly="True" PlaceholderText="Result" />
                    </Grid>

                    <TextBlock Text="PAC Script Preview" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <TextBox
                        Text="{Binding PacPreview}"
                        AcceptsReturn="True"
                        MinHeight="150"
                        MaxHeight="300"
                        TextWrapping="Wrap"
                        IsReadOnly="True"
                        FontFamily="Cascadia Mono,Consolas,Courier New"
                        FontSize="12" />
                </StackPanel>
            </Expander>

            <TextBlock
                Text="{Binding StatusMessage}"
                TextWrapping="Wrap"
                Opacity="0.8"
                FontSize="13" />
        </StackPanel>
    </ScrollViewer>
</Page>
